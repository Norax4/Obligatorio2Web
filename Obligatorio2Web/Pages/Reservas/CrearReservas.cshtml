@page
@model Obligatorio2Web.Pages.Reservas.CrearReservasModel
@{
	ViewData["Title"] = "Formulario de Reserva";
}

<div class="card">
	<div class="card-header">
		<h4 class="text-info">Realice su reserva</h4>
	</div>
	<div class="card-body">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger">
				<div class="container" style="padding: 30px">
					<div class="form-group row">
						<div class="col-sm-2">
							<label class="col-sm-2 col-form-label" asp-for="Reserva.NumHabitacion"></label>
							<div class="col-sm-6">
								<select asp-for="Reserva.NumHabitacion" class="form-control mb-2">
									@foreach (var item in Model.HabsForEach)
									{
										<option value="@item.NumHabitacion">Habitacion @item.NumHabitacion</option>
									}
								</select>
								<span asp-validation-for="Reserva.NumHabitacion" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="form-group row">
						<div class="col-sm-2">
							<label class="col-sm-2 col-form-label" asp-for="Reserva.NumeroPersonas"></label>
							<div class="col-sm-6">
								<input asp-for="Reserva.NumeroPersonas" class="form-control mb-2" type="number"/>
								<span asp-validation-for="Reserva.NumeroPersonas" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="form-group row">
						<div class="col-sm-2">
							<label class="col-sm-2 col-form-label" asp-for="Reserva.FechaInicio"></label>
							<div class="col-sm-6">
								<input asp-for="Reserva.FechaInicio" class="form-control mb-2" type="date" />
								<span asp-validation-for="Reserva.FechaInicio" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="form-group row">
						<div class="col-sm-2">
							<label class="col-sm-2 col-form-label" asp-for="Reserva.FechaFinal"></label>
							<div class="col-sm-6">
								<input asp-for="Reserva.FechaFinal" class="form-control mb-2" type="date"/>
								<span asp-validation-for="Reserva.FechaFinal" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="form-group row">
						<div class="col-sm-6 offset-sm-2">
							<div class="row">
								<div class="col-sm-6">
									<input type="submit" value=" Crear "
										   class="btn btn-primary btn-block" />
								</div>
								<div class="col-sm-6 text-right">
									<a asp-page="/Habitaciones/ListaHabitaciones" class="btn btn-success">Ver la lista de habitaciones</a>
									<a asp-page="/Reservas/PaginaReservas" class="btn btn-primary">Ver la lista de reservas</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>